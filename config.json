{
    "CUDA": {
        "CUDA_VISIBLE_DEVICES" : "4"
    },
    "PATH": {
        "dataset_card": "Estwld/atomic-instruct-v1",
        "dataset_path": "./dataset",
        "model_path"  : "/datas/huggingface/Flan-T5/flan-t5-xl",
        "output_path" : "./results",
        "log_path"    : "./log",
        "local"       : true
    },
    "TRAIN": {
        "learning_rate"              : 1e-5,
        "warmup_steps"               : 500,
        "fp16"                       : false, 
        "bf16"                       : true,
        "weight_decay"               : 1e-3,
        "num_train_epochs"           : 2,
        "per_device_train_batch_size": 8,
        "dataloader_num_workers"     : 8,
        "optim"                      : "adamw_torch",
        "load_best_model_at_end"     : false,
        "greater_is_better"          : true,
        "save_strategy"              : "epoch",
        "report_to"                  : "none",
        "logging_dir"                : "./log",
        "logging_strategy"           : "steps",
        "logging_steps"              : 500,
        "seed"                       : 42
    },
    "LORA": {
        "do_lora"     : true,
        "task_type"   : "SEQ_2_SEQ_LM",
        "r"           : 8,
        "lora_alpha"  : 16,
        "lora_dropout": 0.05
    },
    "GENERATE": {
        "num_beams"           : 5,
        "top_p"               : 0.95,
        "top_k"               : 50,
        "repetition_penalty"  : 2.5,
        "length_penalty"      : 1.0,
        "num_return_sequences": 1
    }
}